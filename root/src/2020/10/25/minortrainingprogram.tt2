<html lang="zh">
	<head>
		<meta charset="UTF-8">
<!--		表格拖动插件 -->
		<link href="/static/css/2020/12/25/bootstrap-table.min.css" rel="stylesheet">
		<link href="/static/css/2020/12/25/jquery.resizableColumns.css" rel="stylesheet">
		<link href="/static/css/2020/12/25/BeAlert.css" rel="stylesheet">
		<link href="/static/css/2020/12/25/bootstrap-switch.min.css" rel="stylesheet">
		<script src="/static/js/2020/12/25/ckeditor.js"></script>
		<link href="/static/css/2020/12/25/all.min.css" rel="stylesheet">
    	<link href="/static/css/2020/12/25/fontawesome.min.css" rel="stylesheet">
		<style type="text/css">
			td, th{
				text-align: center;
			}
			.input-group{
				padding-bottom: 5px;
			}
			.dropdown-item{
				display: block;
				width: 100%;
				padding: .25rem 1.5rem;
				clear: both;
				font-weight: 400;
				color: #212529;
				text-align: inherit;
				white-space: nowrap;
				background-color: transparent;
				border: 0;
			}
		</style>
	</head>
	<body>
		<div class="col-md-12 text-right">
			<div class="text-right" id="toolbar"></div>
			<table class="table table-striped table-hover" id="table"></table>
		</div>
		<div id="msg" style="width: 350px; height: 100px;z-index: 9999; position: absolute; top: 10%;left: 40%; text-align: center"></div>
		<!-- 辅修培养方案模态框 -->
		<div class="modal fade" id="fx_pyfa_set_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="#modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal"
								aria-hidden="true">×
						</button>
						<h4 class="modal-title text-center" id="fx_pyfa_set_modal_title">
						</h4>
					</div>
					<div class="modal-body text-center">
						<input id="hide_zydm" hidden>
<!--						编辑器-->
						<h4 class="text-left text-info">课程设置</h4>
						<hr>
						<div id="editor">
							<p></p>
						</div>
<!--						编辑器完-->
						<hr>
						<h4 class="text-left text-info">学分和结业要求</h4>
						<label for="xfyq" >学分要求</label>
						<textarea id="xfyq" style="width: 100%"></textarea>
						<hr>
						<label for="jyyq">结业要求</label>
						<textarea  id="jyyq" style="width: 100%"></textarea>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default"
								data-dismiss="modal">关闭
						</button>
						<button type="button" class="btn btn-primary" onclick="post_edit()">
							保存
						</button>
			</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
	</body>
	<script src="/static/js/2020/12/25/jquery.min.js"></script>
	<script src="/static/js/2020/12/25/bootstrap.min.js"></script>
	<script src="/static/js/2020/12/25/jquery.resizableColumns.min.js"></script>
	<script src="/static/js/2020/12/25/bootstrap-table.min.js"></script>
	<script src="/static/js/2020/12/25/bootstrap-table-resizable.min.js"></script>
	<script src="/static/js/2020/12/25/bootstrap-table-locale-all.min.js"></script>
	<script src="/static/js/2020/12/25/BeAlert.js"></script>
	<script src="/static/js/2020/12/25/bootstrap-switch.min.js"></script>
	<script type="application/javascript">
	let myeditor;
	$( function() {
		let myDate = new Date();
		$('#table').bootstrapTable({
			method: 'get',
			locale: 'zh-CN',	//中文支持,
			search: true,
			contentType: "application/x-www-form-urlencoded",	//必须要有！！！！
			[% IF jsdw.JSDM == -1 %]
			url: "/2020/10/25/api/minormajorlist?year=" + myDate.getFullYear(),	//要请求数据的文件路径
			[% ELSE %]
			url: "/2020/10/25/api/minormajorlistbyxydm?xydm=[% jsdw.DWDM %]&year=" + myDate.getFullYear(),	//要请求数据的文件路径
			[% END %]
			// height:tableHeight(),	//高度调整
			toolbar: '#toolbar',	//指定工具栏
			striped: true, 	//是否显示行间隔色
			dataField: "res",	//bootstrap table 可以前端分页也可以后端分页，这里
			pageNumber: 1, 	//初始化加载第一页，默认第一页
			pagination: true,	//是否分页
			sidePagination: 'client',	//指定前端分页
			pageSize: 10,	//单页记录数
			showColumns: true,
			clickToSelect: true,	//是否启用点击选中行
			toolbarAlign: 'right', 	//工具栏对齐方式
			buttonsAlign: 'right',	//按钮对齐方式
			columns: [
				{
					title: '全选',
					field: 'select',
					//复选框
					checkbox: true,
					width: 25,
					align: 'center',
					valign: 'middle'
				},
				{
					//field: 'Number',//可不加
					title: '序号',//标题  可不加
					formatter: function (value, row, index) {
						return index+1;
					}
				},
				{
					title: '专业名称',
					field: 'ZWMC',
				},
				{
					title: '专业代码',
					field: 'ZYDM',
				},
				{
					title: '所属学院',
					field: 'XYMC',
					visible: true
				},
				{
					title: '辅修年级',
					field: 'FXNJ',
					visible: true
				},
				{
					title: '操作',
					field: 'CZ',
				}
			],
			responseHandler: function (res) {
				//在ajax获取到数据，渲染表格之前，修改数据源
				res = res.DATA;
				for (let i = 0; i < res.length; i++) {
					res[i].CZ = "<a onclick=\"fx_pyfa_set(this, '" + res[i].ZYDM + "')\"><button type=\"button\" class=\"btn btn-info\" >培养方案设置</button></a>\n"
				}
				return res;
			},
		})
		$("[data-toggle='tooltip']").tooltip();
		ClassicEditor.create(document.querySelector('#editor'), {
			toolbar: ['undo', 'redo',
				'|', 'insertTable', 'tableColumn', 'tableRow', 'mergeTableCells'],
			language: 'zh-cn'
			}).then(editor => {
					myeditor = editor;
			}
		).catch(()=>{
				console.log("网络错误")
			}
		);
	})
	function post_edit() {
		let pyfa = myeditor.getData();
		let xfyq = $("#xfyq").val();
		let jyyq = $("#jyyq").val();
		let zydm = $("#hide_zydm").val();
		confirm(null, "确认保存<span style='color:red'>" + $("#fx_pyfa_set_modal_title").text() + "</span>?", function (isConfirm) {
					  if (isConfirm) {
						  $.ajax({
							  url: "/2020/10/25/minortrainingprogram/trainprogramedit",
							  type: "post",
							  data: {"pyfa": pyfa, "xfyq": xfyq, "jyyq": jyyq, "zydm": zydm},
							  success: function (res) {
								  $("#msg").append(pop_msg("info", "修改成功"));
								  $("#fx_pyfa_set_modal").modal("hide");
							  },
							  error: function (res) {
								  try{
									  res = JSON.parse(res.responseText);
									  console.log(res)
									  $("#msg").append(pop_msg("error", " <br>保存失败", 3000));
								  } catch (e) {
									  alert("无权限操作")
								  }
							  }
						  })
					  }
				  },
			  {
					  type: 'question',
					  confirmButtonText: '确认'
			  }
			)
	}
	function fx_pyfa_set(obj, zydm) {
		let mydate = new Date();
		$("#hide_zydm").val(zydm);
		$.get("/2020/10/25/api/trainingprogram?zydm=" + zydm + "&year=" + mydate.getFullYear(), function (res) {
			res = JSON.parse(res).DATA;
			if (res.length === 0) {
				$("#msg").html(pop_msg("info", "该专业培养方案还未曾设置过", 3000));
				myeditor.setData('');
				$("#xfyq").val('');
				$("#jyyq").val('');
				return;
			}
			res = res[0];
			myeditor.setData(res.PYFA);
			$("#xfyq").val(res.XFYQ);
			$("#jyyq").val(res.JYYQ);
		})
		let ob = obj.parentNode.parentNode.childNodes;
		$("#fx_pyfa_set_modal_title").html("<span style='color: red'>" + ob[3].innerText + "--" + ob[2].innerText + " </span>培养方案");
		$("#fx_pyfa_set_modal").modal('show');	//辅修设置table
	}
	function pop_msg ( level, msg, time=1500 ) {
	let alert_class = "";
	let tip_title = "";
	if (level === 'info') {
		alert_class = "alert-info";
		tip_title = "消息<br>";
	}
	else if (level === 'warn') {
		alert_class = "alert-warning";
		tip_title = "警告<br>";
	}
	else if (level === "error") {
		alert_class = "alert-danger";
		tip_title = "错误<br>";
	}
	let randid = Math.ceil(Math.random()*10);
	let div = "<div class=\"alert " + alert_class + "\" id='tip"+ randid +"'>\n" +
			"\t<a href=\"#\" class=\"close\" data-dismiss=\"alert\">\n" +
			"\t\t&times;\n" +
			"\t</a>\n" +
			"\t<strong>"+ tip_title + "</strong>"+ msg +"\n" +
			"</div>"
	setTimeout(function () {
		$("#tip" + randid).remove();
	}, time)
	return div;
	}
	</script>
</html>