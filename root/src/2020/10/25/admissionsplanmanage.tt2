<html lang="zh">
	<head>
		<meta charset="UTF-8">
<!--		表格拖动插件 -->
		<link href="/static/css/bootstrap-table.min.css" rel="stylesheet">
		<link href="/static/css/jquery.resizableColumns.css" rel="stylesheet">
		<link href="/static/css/BeAlert.css" rel="stylesheet">
		<link href="/static/css/bootstrap-switch.min.css" rel="stylesheet">
		<style type="text/css">
			td, th{
				text-align: center;
			}
			.input-group{
				padding-bottom: 5px;
			}
			.dropdown-item{
				display: block;
				width: 100%;
				padding: .25rem 1.5rem;
				clear: both;
				font-weight: 400;
				color: #212529;
				text-align: inherit;
				white-space: nowrap;
				background-color: transparent;
				border: 0;
			}
		</style>
	</head>
	<body>
		<div class="col-md-12 text-right">
			<div class="text-right" id="toolbar"></div>
			<table class="table table-striped table-hover" id="table"></table>
		</div>
		<div id="msg" style="width: 350px; height: 100px;z-index: 9999; position: absolute; top: 10%;left: 40%; text-align: center"></div>
		<!-- 招生计划设置修改模态框 -->
		<div class="modal fade" id="enroll_plan_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="#modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal"
								aria-hidden="true">×
						</button>
						<h4 class="modal-title text-center" id="enroll_plan_modal_title"></h4>
					</div>
					<div class="modal-body">
						<form class="bs-example bs-example-form" role="form" >
							<div>
								<h1 class="text-info"></h1>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">计划招生人数</span>
										<input type="text" class="form-control" name="zsrs" id="zsrs" autocomplete="off">
									</div>
									<input hidden id="zydm">
								</div>
							</div>
						</form>
					</div>
					<div class="modal-footer" style="border-top: 0px">
						<button type="button" class="btn btn-default"
								data-dismiss="modal">关闭
						</button>
						<button type="button" class="btn btn-primary" onclick="post_edit()">
							提交保存
						</button>
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
		<div class="modal fade" id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="#modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal"
								aria-hidden="true">×
						</button>
						<h4 class="modal-title" id="edit_modal_title"></h4>
					</div>
					<div class="modal-body">
						<form class="bs-example bs-example-form" role="form" >
							<div>
								<h3 class="text-info">报名时间相关</h3>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">报名开始时间</span>
										<input type="datetime-local" class="form-control" name="bmkssj" id="bmkssj">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group" >
										<span class="input-group-addon">报名截止时间</span>
										<input type="datetime-local" class="form-control" name="bmjzsj" id="bmjzsj">
									</div>
								</div>
							</div>
							<div>
								<h3 class="text-info">缴费时间相关</h3>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">一阶段缴费开始时间</span>
										<input type="datetime-local" class="form-control" name="yjdks" id="yjdks">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">一阶段缴费截止时间</span>
										<input type="datetime-local" class="form-control" name="yjdjz" id="yjdjz">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">二阶段缴费开始时间</span>
										<input type="datetime-local" class="form-control" name="ejdks" id="ejdks">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">二阶段缴费截止时间</span>
										<input type="datetime-local" class="form-control" name="ejdjz" id="ejdjz">
									</div>
								</div>
							</div>
							<div>
								<h3 class="text-info">成绩相关</h3>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">成绩录入开始时间</span>
										<input type="datetime-local" class="form-control" name="cjlrks" id="cjlrks">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">成绩录入截止时间</span>
										<input type="datetime-local" class="form-control" name="cjlrjz" id="cjlrjz">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">成绩变更开始时间</span>
										<input type="datetime-local" class="form-control" name="cjbgks" id="cjbgks">
									</div>
								</div>
								<div class="col-md-6">
									<div class="input-group">
										<span class="input-group-addon">二阶段缴费截止时间</span>
										<input type="datetime-local" class="form-control" name="cjbgjz" id="cjbgjz">
									</div>
								</div>
							</div>
							<input hidden id="year">
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default"
								data-dismiss="modal">关闭
						</button>
						<button type="button" class="btn btn-primary" onclick="post_edit()">
							提交保存
						</button>
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div>
	</body>
	<script src="/static/js/jquery-2.0.3.min.js"></script>
	<script src="/static/js/bootstrap.min.js"></script>
	<script src="/static/js/jquery.resizableColumns.min.js"></script>
	<script src="/static/js/bootstrap-table.min.js"></script>
	<script src="/static/js/bootstrap-table-resizable.min.js"></script>
	<script src="/static/js/bootstrap-table-locale-all.min.js"></script>
	<script src="/static/js/BeAlert.js"></script>
	<script src="/static/js/bootstrap-switch.min.js"></script>
	<script type="application/javascript">
	$(function() {
	let myDate = new Date();
	$('#table').bootstrapTable({
			method: 'get',
			locale: 'zh-CN',	//中文支持,
			search: true,
			contentType: "application/x-www-form-urlencoded",	//必须要有！！！！
			[% IF jsdw.JSDM == -1 %]
			url: "/2020/10/25/api/minormajorlist?year=" + myDate.getFullYear(),	//要请求数据的文件路径
			[% ELSE %]
			url: "/2020/10/25/api/minormajorlistbyxydm?xydm=[% jsdw.DWDM %]&year=" + myDate.getFullYear(),	//要请求数据的文件路径
			[% END %]
			// height:tableHeight(),	//高度调整
			toolbar: '#toolbar',	//指定工具栏
			striped: true, 	//是否显示行间隔色
			dataField: "res",	//bootstrap table 可以前端分页也可以后端分页，这里
			pageNumber: 1, 	//初始化加载第一页，默认第一页
			pagination: true,	//是否分页
			sidePagination: 'client',	//指定前端分页
			pageSize: 10,	//单页记录数
			showColumns: true,
			clickToSelect: true,	//是否启用点击选中行
			toolbarAlign: 'right', 	//工具栏对齐方式
			buttonsAlign: 'right',	//按钮对齐方式
			columns: [
				{
					title: '全选',
					field: 'select',
					//复选框
					checkbox: true,
					width: 25,
					align: 'center',
					valign: 'middle'
				},
				{
					title: '辅修年份',
					field: 'FXNJ',
					visible: true
				},
				{
					title: '专业名称',
					field: 'ZWMC',
				},
				{
					title: '专业代码',
					field: 'ZYDM',
				},
				{
					title: '所属学院',
					field: 'XYMC',
					visible: true
				},
				{
					title: '操作',
					field: 'CZ',
				}
			],
			responseHandler: function (res) {
				//在ajax获取到数据，渲染表格之前，修改数据源
				res = res.DATA;
				for (let i = 0; i < res.length; i++) {
					res[i].CZ = "<a onclick=\"enroll_plan_set(this, '" + res[i].ZYDM + "')\"><button type=\"button\" class=\"btn btn-info\" >招生计划设置</button></a>\n"
				}
				return res;
			},
	})
	$("[data-toggle='tooltip']").tooltip();
	})

	function enroll_plan_set(obj, zydm) {
		let ob = obj.parentNode.parentNode.childNodes;
		$("#zsrs").val('');
		$.get("/2020/10/25/api/enrollplan",{"year":ob[1].innerText, "zydm": zydm }, function (res) {
			res = JSON.parse(res).DATA;
			if (res.length === 0 ) {
				$("#msg").html(pop_msg("info", "该专业今年还没有设置招生计划", 2000))
			}
			else {
				$("#zsrs").val(res[0].ZSRS);
			}
		})
		$("#zydm").val(zydm)
		$("#enroll_plan_modal_title").html("<span style='color: red'>" + ob[1].innerText + '年 ' + ob[2].innerText + "</span> 招生计划");
		$("#enroll_plan_modal").modal('show');	//辅修设置table
	}

	function post_edit() {
		let zsrs = $("#zsrs").val();
		confirm(null, "确认修改<span style='color:red'>" + $("#enroll_plan_modal_title").text() + "</span>?", function (isConfirm) {
					  if (isConfirm) {
						  $.ajax({
							  url: "/2020/10/25/admissionsplanmanagement/planedit",
							  type: "post",
							  data: { "zsrs": zsrs, "zydm": $("#zydm").val() },
							  success: function (res) {
								  $("#msg").append( pop_msg("info", "修改成功") );
								  $("#enroll_plan_modal").modal("hide");
								  refresh_data();
							  },
							  error: function (res) {
							  	try {
								  res = JSON.parse(res.responseText);
								  console.log(res)
								  $("#msg").append(pop_msg("error", " <br>修改失败", 3000));
								} catch (e) {
									alert("无操作权限")
								}

							  }
						  })
					  }
				  },
			  {
				  type: 'question',
				  confirmButtonText: '确认'
			  }
			)
	}

	function pop_msg ( level, msg, time=1500 ) {
	let alert_class = "";
	let tip_title = "";
	if (level === 'info') {
		alert_class = "alert-info";
		tip_title = "消息<br>";
	}
	else if (level === 'warn') {
		alert_class = "alert-warning";
		tip_title = "警告<br>";
	}
	else if (level === "error") {
		alert_class = "alert-danger";
		tip_title = "错误<br>";
	}
	let randid = Math.ceil(Math.random()*10);
	let div = "<div class=\"alert " + alert_class + "\" id='tip"+ randid +"'>\n" +
			"\t<a href=\"#\" class=\"close\" data-dismiss=\"alert\">\n" +
			"\t\t&times;\n" +
			"\t</a>\n" +
			"\t<strong>"+ tip_title + "</strong>"+ msg +"\n" +
			"</div>"
	setTimeout(function () {
		$("#tip" + randid).remove();
	}, time)
	return div;
	}

	function refresh_data() {		// 刷新数据
		let myDate = new Date();
		let opt = {
			url: "/2020/10/25/api/minormajorlist?year=" + myDate.getFullYear(),
			silent: true,
		}
		$("#table").bootstrapTable('refresh', opt);
	};
	</script>
</html>